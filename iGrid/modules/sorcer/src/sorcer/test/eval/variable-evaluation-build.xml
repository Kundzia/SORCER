<project name="variable-eval" default="all" basedir=".">
	<!-- set global properties -->
	<import file="../../../../../common-build.xml" />
	<property name="src" value="./../../../../src" />

	<!-- The sources to compile -->
	<patternset id="ant.java">
		<include name="sorcer/test/eval/**/*" />
	</patternset>

	<patternset id="ant.classes">
		<include name="sorcer/test/eval/**/*" />
	</patternset>

	<path id="project.classpath">
		<pathelement location="${classes}/" />
		<pathelement location="${lib}/jgapp.jar" />
		<path refid="jini.path" />
		<path refid="rio.path" />
		<path refid="jep.path" />
	</path>

	<target name="prepare" />

	<target name="compile" depends="compileSources" />
	<target name="jars" depends="variableEval" />
	<target name="variableEval" depends="variable-eval.jar" />
	<target name="all" depends="prepare, compile, jars, copy-run-files" />

	<target name="variable-eval.jar">
		<classdepandjar jarfile="${sorcer.lib}/variable-eval.jar" files="true">
			<classpath refid="project.classpath"/>
			<in name="sorcer.test.eval"/>
			<topclass name="sorcer.test.eval.VariableEvaluation" />
			<topclass name="sorcer.test.eval.ResponseVariable2" />
		</classdepandjar>
	</target>
	<target name="copy-run-files">
			<mkdir dir="${iGrid.home}/data/provider/" />

			<copy todir="${iGrid.home}/data/provider/">
				<fileset dir="./">
					<include name="paramTest.dat" />
				</fileset>
			</copy>
		</target>
</project>
