<?xml version='1.0' encoding='ISO-8859-1' standalone='yes'?>

<project name="Rosen-Suzuki Explorer" default="all" basedir=".">
	<property name="module.name" value="rs-explorer" />
	<property name="module.run.dir" value="ex10b" />

	<!-- set global properties -->
	<import file="../../common-build.xml" />
	<property name="src" value="./src" />
	<property name="resources" value="${iGrid.home}/modules/sorcer/resources" />

	<!-- The sources to compile -->
	<patternset id="ant.java">
		<include name="sorcer/explorer/rs/**/*.java" />
		<exclude name="**/SAVE/*.java" />
		<exclude name="**/BAK/*.java" />
	</patternset>

	<patternset id="ant.classes">
		<include name="sorcer/explorer/rs/**/*.class" />
		<include name="junit/sorcer/**/*.class" />
	</patternset>

	<fileset dir="${resources}" id="icons">
		<include name="sorcer.png" />
	</fileset>

	<path id="project.classpath">
		<pathelement location="${classes}" />
		<path refid="sorcer.path" />
		<path refid="jini.path" />
		<path refid="jfreechart.path" />
		<path refid="jep.path" />
		<path refid="jna.path" />
		<path refid="junit.path" />
		<pathelement location="${eng.lib}/flops.jar" />
	</path>

	<path id="javadocs.classpath">
		<path refid="jini.path" />
		<pathelement location="${common.lib}/buildsupport/ant-ext.jar" />
		<pathelement location="${common.lib}/buildsupport/ant.jar" />
	</path>

	<!-- No RMI stubs are required for JERI type of providers -->
	<target name="compile" depends="compileSources" />
	<target name="jars" depends="exlporer, copy-run-prv-files" />
	<target name="exlporer" depends="rs-explorer.jar, rs-explorer-dl.jar" />
	<target name="all" depends="prepare, compile, jars, copy-run-prv-files" />

	<!-- No RMI stubs are required for JERI type of providers -->
	<target name="rs-explorer.jar" depends="compile">
		<classdepandjar jarfile="${sorcer.lib}/rs-explorer.jar" files="true" debug="false">
			<classpath refid="project.classpath" />
			<in name="sorcer.explorer.rs" />
			<in name="sorcer.model.rs" />
			<topclass name="sorcer.explorer.rs.RosenSuzukiDispatcherMF" />
			<topclass name="sorcer.explorer.rs.RosenSuzukiDispatcherMM" />
			<topclass name="sorcer.explorer.rs.RosenSuzukiExplorerRequestor" />
			<topclass name="sorcer.explorer.rs.RosenSuzukiExplorerRequestorMM" />
			<topclass name="sorcer.explorer.rs.RosenSuzukiRunner" />
			<topclass name="sorcer.model.rs.RosenSuzukiMultiFidelityModelBuilder" />
			<fileset refid="icons" />
		</classdepandjar>
	</target>

	<target name="rs-explorer-dl.jar" depends="compile">
		<classdepandjar jarfile="${sorcer-dl.lib}/rs-explorer-dl.jar" files="true" debug="false">
			<classpath refid="project.classpath" />
			<in name="sorcer.explorer.rs" />
			<in name="engineering.optimization.conmin.provider" />
			<topclass name="sorcer.explorer.rs.RosenSuzukiDispatcherMF" />
			<topclass name="sorcer.explorer.rs.RosenSuzukiDispatcherMM" />
			<topclass name="sorcer.explorer.rs.RosenSuzukiModelManager" />
			<topclass name="engineering.optimization.conmin.provider.ConminStrategy" />
			<topclass name="engineering.optimization.conmin.provider.ConminState" />
			<fileset refid="icons" />
		</classdepandjar>
	</target>

	<target name="docs" depends="prepare, compile">
		<javadoc packagenames="org.jini.rio.tools.ant.*" maxmemory="100M" sourcepath="${src}" destdir="${docs}/api" Author="true" Version="true" Use="true" windowtitle="Rosen-Suzuki Rosen-Suzuki Explorer" doctitle="&lt;h1&gt;Rosen-Suzuki Rosen-Suzuki Explorer;/h1&gt;" bottom="&lt;i&gt;Copyright (c) 2010 SORCERsoft.org, All Rights Reserved.&lt;/i&gt;">
			<group title="Rosen-Suzuki Explorer" packages="sorcer.explorer.rs.*" />
			<classpath refid="project.classpath" />
		</javadoc>
	</target>

	<target name="copy-run-prv-files">
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/configs" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/bin" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/policy" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/logs" />
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/configs">
			<fileset dir="configs">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/bin">
			<fileset dir="bin">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/policy">
			<fileset dir="policy">
				<include name="*" />
			</fileset>
		</copy>
		<chmod dir="${iGrid.home}/bin/examples/${module.run.dir}/bin" perm="755" includes="*.sh" />
	</target>

</project>
