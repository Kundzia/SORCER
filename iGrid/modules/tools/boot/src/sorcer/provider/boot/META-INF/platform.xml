<?xml version="1.0" encoding="UTF-8"?>
<!-- Default platform configuration -->
<platform>
	<!-- SORCER jars to load into the common classloader. -->
	<capability name="SORCER" common="yes">
		<version>5.0</version>
		<manufacturer>SORCERsoft.org</manufacturer>
		<classpath>${iGrid.home}/lib/sorcer/lib/sorcer-prv.jar
			${iGrid.home}/lib/sorcer/lib/sorcer-lib.jar
			${iGrid.home}/lib/sorcer/lib/sorcer-vfe-lib.jar
			${iGrid.home}/lib/sorcer/lib/sorcer-parmodeling-lib.jar
		</classpath>
	</capability>

	<!-- River (Jini) jars to load into the common classloader. -->
	<capability name="River" common="yes">
		<version>2.2.1</version>
		<manufacturer>Apache Software Foundation</manufacturer>
		<classpath>${iGrid.home}/lib/river/lib/jsk-platform.jar
			${iGrid.home}/lib/river/lib/jsk-lib.jar
			${iGrid.home}/lib/river/lib/serviceui.jar
		</classpath>
	</capability>

</platform>

