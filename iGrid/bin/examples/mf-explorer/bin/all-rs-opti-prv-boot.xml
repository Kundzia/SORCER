<?xml version="1.0"?>
<project name="Boot all Rosen-Suzuki optimization services" default="all-rs-opti" basedir=".">

	<property environment="env" />
	<import file="${env.IGRID_HOME}/modules/common-run.xml" />

	<target name="all-rs-opti" depends="set_native_lib">
		<echo message=" " />
		<echo message="native_lib = ${native_lib}" />
		<echo message=" " />
		<java jar="${lib}/boot.jar" fork="yes">
			<arg value="../configs/boot-all-rs-opti.config" />
			<sysproperty key="iGrid.home" value="${iGrid.home}" />
			<sysproperty key="sorcer.env.file" value="${iGrid.home}/configs/sorcer.env" />
			<sysproperty key="java.security.policy" value="../policy/rs-explorer-prv.policy" />
			<sysproperty key="java.util.logging.config.file" value="../configs/sorcer-prv.logging" />
			<sysproperty key="jna.library.path" value="${local.lib}" />
			<sysproperty key="optimizer.data.dir" value="${iGrid.home}/modules/engineering/optimization/conmin/data/test" />
			<sysproperty key="jna.library.path" value="${native_lib}" />
		</java>
		<echo message="native_lib = ${native_lib}" />
	</target>

	<!-- os dependent library -->
	<target name="set_native_lib" depends="set_win_library_path, set_mac_library_path, set_linux_library_path">
	</target>

	<target name="set_win_library_path" depends="set_os_flags" if="isWindows">
		<property name="native_lib" value="${iGrid.home}/lib/native/x86-winnt" />
	</target>

	<target name="set_mac_library_path" depends="set_os_flags" if="isMac">
		<property name="native_lib" value="${iGrid.home}/lib/native/universal64-macosx" />
	</target>

	<target name="set_linux_library_path" depends="set_os_flags" if="notWindowsOrMac">
		<property name="native_lib" value="${iGrid.home}/lib/native/amd64-linux" />
	</target>

	<target name="set_os_flags">
		<condition property="isMac">
			<os family="mac" />
		</condition>
		<condition property="isWindows">
			<os family="windows" />
		</condition>
		<condition property="notWindowsOrMac">
			<and>
				<not>
					<os family="windows" />
				</not>
				<not>
					<os family="mac" />
				</not>
			</and>
		</condition>
	</target>

</project>